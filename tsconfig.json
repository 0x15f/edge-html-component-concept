{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist",
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["es2020"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types", "@types/service-worker-mock"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
